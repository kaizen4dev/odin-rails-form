<%= form_with model: @user do |form| %>
  <% @user.errors.full_messages.each do |message| %>
    <p> <%= message %> </p>
  <% end %>

  <%= form.label :username %> 
  <br>
  <%= form.text_field :username, placeholder: "JohnTheSmart"%>
  <br>

  <%= form.label :email %>
  <br>
  <%= form.email_field :email, placeholder: "smartyjohn@example.com" %>
  <br>

  <%= form.label :password %>
  <br>
  <%= form.password_field :password, placeholder: "***********" %>
  <br>

  <%= form.submit %>
<% end %>
